<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.ConfirmOrderActivity"
    android:orientation="horizontal"
    android:background="@color/white">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/coordinatorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/topAppBar"
                        style="@style/Widget.MaterialComponents.Toolbar.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:menu="@menu/top_app_bar">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/app_name"
                            android:textSize="24dp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/white"/>
                    </com.google.android.material.appbar.MaterialToolbar>
                </com.google.android.material.appbar.AppBarLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <TextView
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="ORDER SUMMARY"
                android:letterSpacing="0.2"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20sp">
            </TextView>

            <TextView
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#74696A"
                android:textSize="18sp"
                android:letterSpacing="0.2"
                android:textStyle="bold"
                android:text="ITEMS IN YOUR BAG :"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp">
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="center"
                android:id="@+id/rvCartPage"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#74696A"
                android:textSize="18sp"
                android:letterSpacing="0.2"
                android:textStyle="bold"
                android:text="PRICE :"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp">
            </TextView>

            <GridLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:columnCount="2"
                android:rowCount="4"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:gravity="end"
                    android:paddingBottom="5dp"
                    android:text="Gross Total : "
                    android:textSize="19sp">
                </TextView>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:gravity="end"
                    android:paddingBottom="5dp"
                    android:text="(-) Discount : "
                    android:textSize="19sp"/>

                <TextView
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:gravity="end"
                    android:paddingBottom="5dp"
                    android:text="(+) Tax : "
                    android:textSize="19sp"/>

                <TextView
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:text="Grand Total : "
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:paddingBottom="5dp"
                    android:layout_row="3"
                    android:layout_column="0"/>

                <TextView
                    android:id="@+id/orderTotal"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:paddingBottom="5dp"
                    android:text="-"
                    android:textSize="19sp">
                </TextView>

                <TextView
                    android:id="@+id/tax"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:paddingBottom="5dp"
                    android:textColor="#F72805"
                    android:text="-"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/grandTotal"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:paddingBottom="5dp"
                    android:text="-"
                    android:textColor="#6CB848"
                    android:textSize="19sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:paddingBottom="5dp"
                    android:text="-"
                    android:textColor="#6CB848"
                    android:textSize="19sp"
                    android:textStyle="bold"/>
            </GridLayout>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#74696A"
                android:textSize="18sp"
                android:letterSpacing="0.2"
                android:textStyle="bold"
                android:text="DELIVERING TO :"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center">
            </TextView>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:text="Name"
                    android:paddingBottom="5dp"
                    android:gravity="center">
                </TextView>

                <TextView
                    android:id="@+id/streetAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="address"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:id="@+id/addressLine2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="addressLine2"
                    android:textSize="19sp"
                    android:paddingBottom="5dp"/>

                <Button
                    android:id="@+id/changeAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_filled_metal_grey"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:text="CHANGE ADDRESS"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingRight="50dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelOrder"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_filled_metal_grey"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:paddingRight="50dp"
                    android:text="CANCEL"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/confirmOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"

                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:paddingRight="50dp"
                    android:text="CONFIRM"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
